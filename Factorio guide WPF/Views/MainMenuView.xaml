<UserControl x:Class="Factorio_guide_WPF.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Factorio_guide_WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Рецепты" Command="{Binding NavigateRecipesCommand}"/>
            <Button Content="Лайфхаки" Command="{Binding NavigateLiveHackCommand}"/>
            <Button Content="Гайды" Command="{Binding NavigateGuideCommand}"/>
            <Button Content="Часто задаваемые вопросы" Command="{Binding NavigateFaqCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>